@model ExpenseTracker.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="row mt-4">
    <div class="col-md-12 d-flex align-items-center">
        <a asp-action="Index" class="btn btn-link p-0" style="margin-right: 20px;">
            <i class="bi bi-arrow-bar-left" style="font-size: 1.5rem; color: black; letter-spacing: 1pt;"></i>
        </a>
        <h4 class="mb-0" style="letter-spacing: 1pt;">@ViewData["Title"]</h4>
    </div>
</div>

<hr />
<div class="row" style="letter-spacing: 1pt;">
    <div class=" col-md-4">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div class="form-group mb-4">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control no-rounded-corners" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-dark no-rounded-corners"
                    style="letter-spacing: 1pt;" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    .no-rounded-corners {
        border-radius: 0 !important;
    }

    .form-group label {
        margin-bottom: 0.5rem;
    }
</style>